<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="container">danshortener</h1>
      </div>
      <div class="bs-component">
        <div class="jumbotron">
          <h2>Shorten a URL</h2>

          <%= form_for Url.new, :remote => true do |f| -%>
            <p><%= f.text_field :url, placeholder: "paste in a URL to enshrinkenize it...", class: "form-control" %></p>
            <p><%= f.submit class: "btn btn-primary btn-lg" %></p>
          <% end -%>
          <!-- <p><a class="btn btn-primary btn-lg">Enshrinken</a></p> -->
        </div>
      <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div>
    </div>
  </div>

  <div id="ajax-success" class="row" style="display: none">
    <div class="col-lg-12">
      <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <center>
          <h5>URL shortened!</h5>
          <h2 id="shortened-url"></h2>
        </center>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="container">the top 100</h1>
      </div>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>short URL</th>
            <th>destination</th>
            <th>hits</th>
          </tr>
        </thead>
        <tbody>
          <% @top100.each do |url| %>
          <tr>
            <td><%= "http://#{request.env["HTTP_HOST"]}/#{url.shorturl}" %></td>
            <td><%= link_to url.url %></td>
            <td><%= url.hits %></td>
          </tr>
          <% end -%>
        </tbody>
      </table> 
    </div>
  </div>
</div>